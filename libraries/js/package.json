{
  "name": "@projectlibertylabs/siwa",
  "version": "0.0.0",
  "description": "Sign In With Access Utility Library",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "npm run clean && tsc -p ./tsconfig.types.json && tsc -p ./tsconfig.cjs.json && tsc -p ./tsconfig.esm.json && node scripts/package.cjs",
    "clean": "rm -Rf dist",
    "test": "vitest run",
    "test:quiet": "vitest run --silent",
    "format": "tsc -p ./tsconfig.eslint.json --noEmit --pretty && npm run prettier && npm run lint:fix",
    "prettier": "npx prettier --write src",
    "lint": "tsc -p ./tsconfig.eslint.json --noEmit --pretty && npx eslint src",
    "lint:fix": "npx eslint --fix src",
    "lint:ci": "npx eslint src && npx prettier --check src",
    "generate:data-structures": "npx tsx src/mocks/generate-data-structures.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProjectLibertyLabs/siwa.git"
  },
  "author": "Project Liberty LLC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ProjectLibertyLabs/siwa/issues"
  },
  "homepage": "https://github.com/ProjectLibertyLabs/siwa#readme",
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/eslint__js": "^8.42.3",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "bs58": "^6.0.0",
    "eslint": "^9.9.1",
    "jsonld": "^8.3.2",
    "jsonld-signatures": "^11.3.0",
    "prettier": "3.3.3",
    "rdf-canonize": "^4.0.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@digitalbazaar/data-integrity": "^2.3.0",
    "@digitalbazaar/eddsa-rdfc-2022-cryptosuite": "^1.1.0",
    "@digitalbazaar/vc": "^7.0.0",
    "@polkadot/keyring": "^13.0.2",
    "@polkadot/types": "^12.4.2",
    "@polkadot/types-codec": "^12.4.2",
    "@polkadot/util": "^13.0.2",
    "@polkadot/util-crypto": "^13.0.2",
    "tweetnacl": "^1.0.3"
  }
}
